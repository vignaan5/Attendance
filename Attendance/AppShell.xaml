<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Attendance.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Attendance"
    Shell.FlyoutBehavior="Flyout" x:Name="Shell_Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        x:Name="User_flyout" 
 />

    <ShellContent
        Title="Admin Page"
        ContentTemplate="{DataTemplate local:Pages.AdminPage}"
        Route="AdminPage" />

    <ShellContent
        Title="Log Out"
        ContentTemplate="{DataTemplate local:Pages.LogoutPage}"
        Route="LogoutPage" />



</Shell>
