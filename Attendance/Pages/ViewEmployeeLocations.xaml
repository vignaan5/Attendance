<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Attendance.Pages.ViewEmployeeLocations"
             Title="ViewEmployeeLocations">
    <ScrollView>
    <VerticalStackLayout x:Name="vs">
        <Entry Placeholder="Enter Employee Id" x:Name="emp_id_entry"></Entry>
        <DatePicker x:Name="dtpicker"></DatePicker>
        <Button Text="Get Locations" Clicked="Button_Clicked" VerticalOptions="Center"></Button>
        <ActivityIndicator IsVisible="False" IsRunning="True" IsEnabled="True" x:Name="actind"></ActivityIndicator>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>