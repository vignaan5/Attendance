<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Attendance.Pages.ReportsPage"
             Title="ReportsPage" BackgroundImageSource="whiteback.jpg">
    <VerticalStackLayout Spacing="10">
        <Button Text="View Attendance Report" x:Name="showempreportbtn" Clicked="showempreportbtn_Clicked" HorizontalOptions="Center" WidthRequest="290"></Button>
        <Button Text="View Your Team Report" x:Name="showteamreportbtn" Clicked="showteamreportbtn_Clicked" HorizontalOptions="Center" WidthRequest="290"></Button>
        <Button Text="View Your Team Products Report" x:Name="showproducts" Clicked="showproducts_Clicked" HorizontalOptions="Center" WidthRequest="290"></Button >
        <Button Text="View Employee's Store Stock" x:Name="empstorestock" Clicked="empstorestock_Clicked" HorizontalOptions="Center" WidthRequest="290"></Button>
        <Button Text="View Employee's Location" x:Name="emploc" Clicked="emploc_Clicked" HorizontalOptions="Center" WidthRequest="290" IsEnabled="False" IsVisible="False"></Button>

    </VerticalStackLayout>
</ContentPage>