<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Attendance.Pages.DataGrid"
             Title="DataGrid"
             x:Name="cpage" BackgroundImageSource="whiteback.jpg">
    <ScrollView Orientation="Vertical">
        
    <VerticalStackLayout x:Name="vs">
        <Label 
            Text="Choose a date to genereate report!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <DatePicker x:Name="dpicker"></DatePicker>
            <Picker x:Name="statepicker" SelectedIndexChanged="statepicker_SelectedIndexChanged"></Picker>
        <Button Text="Generate Report" Clicked="get_report" x:Name="genxl"></Button>
    </VerticalStackLayout>
       
    </ScrollView>
</ContentPage>