<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Attendance.Pages.LeaveRequests"
             Title="LeaveRequests">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center" x:Name="vs">

            <Image
                Source="clayveda.png"
                SemanticProperties.Description="Have a nice day!"
                MaximumHeightRequest="300"
                HorizontalOptions="Center" />
            <ImageButton Source="home.png" x:Name="homebtn" Clicked="homebtn_Clicked" HorizontalOptions="Start" MaximumWidthRequest="30" MaximumHeightRequest="40"></ImageButton>

            <VerticalStackLayout x:Name="innervs" Spacing="25" Padding="30,0" VerticalOptions="Center" >

                <ActivityIndicator IsVisible="True" IsRunning="True" IsEnabled="True" x:Name="actind"></ActivityIndicator>
                
            </VerticalStackLayout>
            

            <Image
                Source="vignaan2.png"
                SemanticProperties.Description="Have a nice day!"
                MaximumHeightRequest="300"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
            
            </ScrollView>
</ContentPage>