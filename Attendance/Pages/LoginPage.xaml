<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Attendance.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout >
        <Frame VerticalOptions="FillAndExpand">
            <Entry x:Name="usrname"  Placeholder="Enter Username" VerticalOptions="Center" HorizontalOptions="Center" >
                
                
            </Entry>
        </Frame>
        <Frame VerticalOptions="FillAndExpand">
            <Entry x:Name="passcode" Placeholder="Enter Password" IsPassword="True" HorizontalOptions="Center" VerticalOptions="Center"></Entry>
        </Frame>

        <Button Clicked="Login_to_app"  x:Name="login_btn"   HorizontalOptions="Center" VerticalOptions="End" Text="Login" BackgroundColor="Orange"></Button>
        <ActivityIndicator x:Name="actind" IsVisible="False" IsRunning="True" IsEnabled="True" BackgroundColor="White"></ActivityIndicator>
    </VerticalStackLayout>
</ContentPage>